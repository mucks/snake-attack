{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "./dist"
    },
    "include": [
        "colyseus-server.ts",
        "colyseus-server/**/*"
    ],
    "exclude": [
        "node_modules",
        ".next"
    ]
}